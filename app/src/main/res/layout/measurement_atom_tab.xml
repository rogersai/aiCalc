<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/numPad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp">

            <Button
                android:id="@+id/button1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:padding="0dp"
                android:text="1"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />

            <Button
                android:id="@+id/button2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:padding="0dp"
                android:text="2"
                app:layout_constraintEnd_toStartOf="@+id/button3"
                tools:layout_editor_absoluteY="150dp" />

            <Button
                android:id="@+id/button3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:padding="0dp"
                android:text="3"
                app:layout_constraintEnd_toStartOf="@+id/button3"
                tools:layout_editor_absoluteY="150dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="4"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />

            <Button
                android:id="@+id/button5"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="5"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />

            <Button
                android:id="@+id/button6"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="6"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="7"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />

            <Button
                android:id="@+id/button8"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="8"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />

            <Button
                android:id="@+id/button9"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="9"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button0"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="0"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/typePad"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/numPad"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonMass"
                android:layout_width="15dp"
                android:layout_height="48dp"
                android:text="MS"
                android:textSize="8sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonVolume"
                android:layout_width="15dp"
                android:layout_height="48dp"
                android:text="VL"
                android:textSize="8sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonLength"
                android:layout_width="32dp"
                android:layout_height="48dp"
                android:text="LN"
                android:textSize="8sp" />
        </TableRow>

    </TableLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/typeContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/typePad"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>