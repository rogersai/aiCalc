<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".4" />

    <TableLayout
        android:id="@+id/numPad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:padding="0dp">

            <Button
                android:id="@+id/button1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:padding="0dp"
                android:text="1"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />

            <Button
                android:id="@+id/button2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:padding="0dp"
                android:text="2"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/button3"
                tools:layout_editor_absoluteY="150dp" />

            <Button
                android:id="@+id/button3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:padding="0dp"
                android:text="3"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/button3"
                tools:layout_editor_absoluteY="150dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="4"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />

            <Button
                android:id="@+id/button5"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="5"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />

            <Button
                android:id="@+id/button6"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="6"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button7"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="7"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />

            <Button
                android:id="@+id/button8"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="8"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />

            <Button
                android:id="@+id/button9"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="9"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/button0"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="0"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                tools:layout_editor_absoluteY="150dp" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/typePad"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:shrinkColumns="@android:string/defaultMsisdnAlphaTag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/numPad"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonMass"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="MS"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonVolume"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="VL"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonLength"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="LN"
                android:textSize="14sp" />
        </TableRow>

    </TableLayout>

    <FrameLayout
        android:id="@+id/typeContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/typePad"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>